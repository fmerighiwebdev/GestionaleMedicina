<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="Control.ControllerSceltaLogin"
           prefHeight="400.0" prefWidth="600.0"
           stylesheets="@style.css">

    <AnchorPane>
        <VBox alignment="CENTER" spacing="20" layoutX="225" layoutY="125">
            <Label fx:id="titoloPannelloScelta" text="Seleziona l'accesso"/>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="bottoneSceltaPaziente" text="Paziente" onAction="#bottoneSceltaPaziente" prefWidth="140.0" prefHeight="80.0">
                    <graphic>
                        <ImageView fitWidth="50" fitHeight="50" preserveRatio="true">
                            <image>
                                <Image url="@images/patient_icon_64.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="bottoneSceltaDottore" text="Dottore" onAction="#bottoneSceltaDottore" prefWidth="140.0" prefHeight="80.0">
                    <graphic>
                        <ImageView fitWidth="50" fitHeight="50" preserveRatio="true">
                            <image>
                                <Image url="@images/patient_icon_64.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </AnchorPane>

</StackPane>
